@using GestionEcole.Resources.Views.Shared;

@model GestionEcole.Models.Cours

@{
    ViewBag.Title = @TitreBtn.DetailsIcon;
}

<h2>
    @ViewBag.Title
    <a class="btn btn-default" title=@TitreBtn.EditIcon href="/Cours/Edit?id=@Model.CoursId"><span class="glyphicon glyphicon-pencil"></span></a>
</h2>

<div class="col-xs-8 col-xs-offset-2">
    <div class="list-group">
        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.DateDebut)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.DateDebut)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.DateFin)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.DateFin)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Description)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Description)</p>
        </div>
    </div>
</div>

<div class="col-xs-12">
    <a class="btn btn-lg btn-danger" title=@TitreBtn.BackIcon href="/Cours"><span class="glyphicon glyphicon-arrow-left"></span></a>
</div>