@using GestionEcole.Resources.Views.Shared;

@model GestionEcole.Models.Cours

@{
    ViewBag.Title = TitreBtn.EditIcon;
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="col-xs-8 col-xs-offset-2">
    <fieldset>
        <legend>@GestionEcole.Resources.Views.Cours.Index.IndexTitle</legend>

        <div class="form-group col-xs-8 col-xs-offset-2">
            @Html.LabelFor(model => model.DateDebut, new { @class = "control-label" })
            <input type="datetime-local" name="DateDebut" id="DateDebut" class="form-control" />
            @Html.ValidationMessageFor(model => model.DateDebut)
        </div>

        <div class="form-group col-xs-8 col-xs-offset-2">
            @Html.LabelFor(model => model.DateFin, new { @class = "control-label" })
            <input type="datetime-local" name="DateFin" id="DateFin" class="form-control" />
            @Html.ValidationMessageFor(model => model.DateFin)
        </div>

        <div class="form-group col-xs-8 col-xs-offset-2">
            @Html.LabelFor(model => model.Description, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Description)
        </div>

       

    </fieldset>

    <div class="form-group col-xs-12 col-md-8 col-md-offset-2">
        <button class="btn btn-lg btn-primary pull-right" title=@TitreBtn.SaveIcon type="submit"><span class="glyphicon glyphicon-floppy-disk"></span></button>
    </div>
</div>
}

<div class="col-xs-12">
    <a class="btn btl-lg btn-danger" title=@TitreBtn.BackIcon href="/Cours"><span class="glyphicon glyphicon-arrow-left"></span></a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
