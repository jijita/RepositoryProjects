@using GestionEcole.Resources.Views.Shared;
@model IEnumerable<GestionEcole.Models.Evaluation>

@{
    ViewBag.Title = @GestionEcole.Resources.Views.Evaluation.Titles.EvaluationsEtudiant;
}

<h2>@ViewBag.Title</h2>

<div class="col-xs-8 col-xs-offset-2">
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Etudiant.Nom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Etudiant.Prenom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Matiere.Titre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TypeEvaluation.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TypeEvaluation.Ponderation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Note)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Etudiant.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Etudiant.Prenom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Matiere.Titre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeEvaluation.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeEvaluation.Ponderation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Note)
                    </td>
                    <td>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>