@using GestionEcole.Resources.Views.Shared
@using GestionEcole.Resources.Views.Enseignant
@model IEnumerable<GestionEcole.Models.Enseignant>

@{
    ViewBag.Title = Index.ViewBagTitle;

    int CombienDePage = ViewBag.CombienDePage;
}

<h2>@ViewBag.Title</h2>

<p>
    <a class="btn btn-default" title=@TitreBtn.NewIcon  href="/Enseignant/Create"><span class="glyphicon glyphicon-plus"></span></a>   
</p>

<div class="col-xs-8 col-xs-offset-2">
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prenom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prenom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-default" title=@TitreBtn.EditIcon href="/Enseignant/Edit?id=@item.Id"><span class="glyphicon glyphicon-pencil"></span></a>
                            <a class="btn btn-default" title=@TitreBtn.DetailsIcon href ="/Enseignant/Details?id=@item.Id"><span class="glyphicon glyphicon-list"></span></a>
                            <a class="btn btn-default" title=@TitreBtn.DeleteIcon href ="/Enseignant/Delete?id=@item.Id"><span class="glyphicon glyphicon-trash"></span></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>