@using GestionEcole.Resources.Views.Shared
@using GestionEcole.Resources.Views.Enseignant
@model GestionEcole.Models.Enseignant

@{
    ViewBag.Title = Details.ViewBagTitle;

    List<GestionEcole.Models.Matiere> sesMatieres = ViewBag.MatieresInEnseignant;
}

<h2>
    @ViewBag.Title
    <a class="btn btn-default" title=@TitreBtn.EditIcon href="/Enseignant/Edit?id=@Model.Id"><span class="glyphicon glyphicon-pencil"></span></a>
</h2>

<div class="col-xs-8 col-xs-offset-2">
    <div class="list-group">
        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Nom)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Nom)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Prenom)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Prenom)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Email)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Email)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.DateNaissance)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.DateNaissance)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Adresse)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Adresse)</p>
        </div>
    </div>
</div>

@if (sesMatieres.Count > 0)
{
    <div class="">
        
        <table class="table">
            <thead>
                <tr>
                    <th>@Details.th @Model.Prenom @Model.Nom</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var matiere in sesMatieres)
                {
                    <tr>
                        <td>@matiere.Titre</td>
                        
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary" title=@TitreBtn.DetailsIcon href="/Matiere/Details?id=@matiere.MatiereId&enseignantId=@Model.Id"><span class="glyphicon glyphicon-list"></span></a>
                                <a class="btn btn-primary" title="Evaluation" href="/Evaluation/EvaluationsEnseignantMatiere?matiereId=@matiere.MatiereId&enseignantId=@Model.Id"><span class="glyphicon glyphicon-edit"></span></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
}

<div class="col-xs-12">
    <a class="btn btn-lg btn-danger" href="/Enseignant"><span class="glyphicon glyphicon-arrow-left"></span></a>
    
</div>