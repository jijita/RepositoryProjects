@using GestionEcole.Resources.Views.Shared
@using GestionEcole.Resources.Views.Enseignant
@model GestionEcole.Models.Enseignant

@{
    ViewBag.Title = Delete.ViewBagTitle;
}

<h2>Delete</h2>

<div class="col-xs-8 col-xs-offset-2">
    <div class="list-group">
        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Nom)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Nom)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Prenom)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Prenom)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Email)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Email)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.DateNaissance)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.DateNaissance)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Adresse)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Adresse)</p>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="btn-group btn-group-lg col-xs-12">
        <button type="submit" title=@TitreBtn.DeleteIcon class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></button>
        <a class="btn btn-danger" title=@TitreBtn.BackIcon href="/Enseignant"><span class="glyphicon glyphicon-arrow-left"></span></a>
    </div>
}