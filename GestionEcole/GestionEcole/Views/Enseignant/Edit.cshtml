@using GestionEcole.Resources.Views.Shared
@using GestionEcole.Resources.Views.Enseignant

@model GestionEcole.Models.Enseignant

@{
    ViewBag.Title = Edit.ViewBagTitle;

    List<GestionEcole.Models.Matiere> sesMatieres = ViewBag.CanRemove;
    List<GestionEcole.Models.Matiere> autresMatieres = ViewBag.CanAdd;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="center-block">
        <fieldset>
            <legend>@GestionEcole.Resources.Views.Enseignant.Edit.ViewBagTitle</legend>

            <div class="form-group col-xs-8 col-xs-offset-2">
                @Html.LabelFor(model => model.Nom, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Nom, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nom)
            </div>

            <div class="form-group col-xs-8 col-xs-offset-2">
                @Html.LabelFor(model => model.Prenom, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Prenom, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Prenom)
            </div>

            <div class="form-group col-xs-8 col-xs-offset-2">
                @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>

            <div class="form-group col-xs-8 col-xs-offset-2">
                @Html.LabelFor(model => model.DateNaissance, new { @class = "control-label" })
                <input class="form-control" type="date" name="DateNaissance" id="DateNaissance" />
                @Html.ValidationMessageFor(model => model.DateNaissance)
            </div>

            <div class="form-group col-xs-8 col-xs-offset-2">
                @Html.LabelFor(model => model.Adresse, new { @class = "control-label" })
                @Html.TextAreaFor(model => model.Adresse, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Adresse)
            </div>
        </fieldset>

        <div class="form-group col-xs-8 col-xs-offset-2">
            <button title=@Edit.ViewBagTitle class="btn btn-lg btn-primary pull-right" type="submit"><span class="glyphicon glyphicon-floppy-disk"></span></button>
        </div>
    </div>
}

<div class="panel panel-primary col-xs-10">
    <div class="panel-heading">@Details.th @Model.Prenom @Model.Nom</div>

    <table class="table">
        <thead>
            <tr>
                <th>@Edit.th</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var matiere in sesMatieres)
            {
                <tr>
                    <td>@matiere.Titre</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-lg btn-primary col-xs-12 col-md-1" title=@TitreBtn.DetailsIcon href="/Matiere/Details?id=@matiere.MatiereId&whereIComeFrom=@Request.Url.LocalPath"><span class="glyphicon glyphicon-list"></span></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="col-xs-12">
    <a class="btn btn-lg btn-danger" title=@TitreBtn.BackIcon href="/Enseignant"><span class="glyphicon glyphicon-arrow-left"></span></a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}