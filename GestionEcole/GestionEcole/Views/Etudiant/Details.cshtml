@using GestionEcole.Resources.Views.Shared
@using GestionEcole.Resources.Views.Etudiant
@model GestionEcole.Models.Etudiant

@{
    ViewBag.Title = Details.ViewBagTitle;
    List<GestionEcole.Models.Cours> lesCours = ViewBag.coursEtudiant;
    List<GestionEcole.Models.Matiere> lesMatiere = ViewBag.matiereEtudiant;

    TempData["idEtudiant"] = Model.Id;
}

<h2>
    @ViewBag.Title
    <a class="btn btn-lg btn-default" title=@TitreBtn.EditIcon href="/Etudiant/Edit?id=@Model.Id"><span class="glyphicon glyphicon-pencil"></span></a>
</h2>

<div class="col-xs-8 col-xs-offset-2">
    <div class="list-group">
        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Nom)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Nom)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Prenom)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Prenom)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Email)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Email)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.DateNaissance)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.DateNaissance)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Adresse)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Adresse)</p>
        </div>
    </div>
</div>


<fieldset class="col-xs-10 col-xs-offset-1">
    <legend>@Details.LegendStudent @Model.Prenom @Model.Nom :</legend>

    <div>
        @foreach (var item in lesCours)
        {
            <ul class="list-group col-xs-6 col-xs-offset-2">
                <li class="list-group-item">
                    <div>
                        <span class="label label-default col-xs-5">@Details.Course</span> <strong>@item.Matiere.Titre</strong>
                    </div>
                    <div>
                        <span class="label label-default col-xs-5">@Details.LessonsStart</span> <strong>@item.DateDebut</strong>
                    </div>
                    <div>
                        <span class="label label-default col-xs-5">@Details.LessonsEnd</span> <strong>@item.DateFin</strong>
                    </div>
                    <div>
                        <span class="label label-default col-xs-5">@Details.LessonSubject</span> <strong>@item.Description</strong>
                    </div>
                    <div>
                        <span class="label label-default col-xs-5">@Details.Teacher </span> <strong>@item.Enseignant.Nom</strong>
                        <span>@item.Enseignant.Prenom</span>
                    </div>

                </li>

            </ul>
           

        }

    </div>

    <div>
        @Html.ActionLink(@Details.Sinscrire, "Inscription", "PresenceCours", new { etudiantId = Model.Id }, new { @class = "btn  btn-lg btn-info pull-right" })
    </div>


</fieldset>

<fieldset class="col-xs-10 col-xs-offset-1">
    <legend>@Details.LegendCourses @Model.Prenom @Model.Nom : </legend>

    <div class="col-xs-12">
        <div class="list-group col-xs-4 col-xs-offset-4">
            @foreach (var item2 in lesMatiere)
            {
                <div class="list-group-item">
                    <h4 class="list-group-item-heading">Titre</h4>
                    <p class="list-group-item-text">@item2.Titre</p>

                    <h4 class="list-group-item-heading">Description</h4>
                    <p class="list-group-item-text">@item2.Description</p>
                </div>
            }
        </div>
    </div>

</fieldset>

<fieldset class="col-xs-10 col-xs-offset-1">
    <legend>@Details.Average @Model.Prenom @Model.Nom est: @Model.Moyenne %</legend>

    <div class="col-xs-12 col-md-7">
        @Html.ActionLink(@Details.DetailsNotes, "EvaluationsEtudiant", "Evaluation", new { etudiantId = Model.Id }, new { @class = "btn  btn-lg btn-info pull-right" })
    </div>
</fieldset>

<div class="col-xs-12">
    <a class="btn btn-lg btn-danger" title=@TitreBtn.BackIcon href="/Etudiant"><span class="glyphicon glyphicon-arrow-left"></span></a>
</div>