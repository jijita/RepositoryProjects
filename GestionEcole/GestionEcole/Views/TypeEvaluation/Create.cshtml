@using GestionEcole.Resources.Views.TypeEvaluation;
@using GestionEcole.Resources.Views.Shared

@model GestionEcole.Models.TypeEvaluation

@{
    ViewBag.Title = Create.ViewBagTitle;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="col-xs-8 col-xs-offset-2">
        <fieldset>
            <legend>@Create.Legend</legend>

            <div class="form-group col-xs-8 col-xs-offset-2">
                @Html.LabelFor(model => model.Type, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Type, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Type)
            </div>

            <div class="form-group col-xs-8 col-xs-offset-2">
                @Html.LabelFor(model => model.Ponderation, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Ponderation, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Ponderation)
            </div>
        </fieldset>

        <div class="form-group col-xs-8 col-xs-offset-2">
            <button class="btn btn-lg btn-primary col-xs-12 col-md-1 pull-right" title=@TitreBtn.CreateIcon type="submit"><span class="glyphicon glyphicon-floppy-disk"></span></button>
        </div>
    </div>
}

<div class="col-xs-12">
    <a class="btn btn-lg btn-danger" title=@TitreBtn.BackIcon href="/TypeEvaluation"><span class="glyphicon glyphicon-arrow-left"></span></a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
