@using GestionEcole.Resources.Views.TypeEvaluation;
@using GestionEcole.Resources.Views.Shared

@model GestionEcole.Models.TypeEvaluation

@{
    ViewBag.Title = Delete.ViewBagTitle;
}

<h2>@ViewBag.Title</h2>

<div class="col-xs-8 col-xs-offset-2">
    <div class="list-group">
        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Type)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Type)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Ponderation)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Ponderation)</p>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="btn-group btn-group-lg col-xs-12">
        <button type="submit" title=@TitreBtn.DeleteIcon class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></button>
        <a class="btn btn-danger" title=@TitreBtn.BackIcon href="/TypeEvaluation"><span class="glyphicon glyphicon-arrow-left"></span></a>
    </div>
}