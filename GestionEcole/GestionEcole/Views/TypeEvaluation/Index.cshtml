@using GestionEcole.Resources.Views.TypeEvaluation;
@using GestionEcole.Resources.Views.Shared

@model IEnumerable<GestionEcole.Models.TypeEvaluation>

@{
    ViewBag.Title = Index.ViewBagTitle;
}

<h2>@ViewBag.Title</h2>

<p>
    <a class="btn btn-lg btn-default" title=@TitreBtn.NewIcon href="/TypeEvaluation/Create"><span class="glyphicon glyphicon-plus"></span></a>   
</p>
<div class="col-xs-8 col-xs-offset-2">
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ponderation)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ponderation)
                    </td>
                    <td>
                        <div class="btn-group btn-group-lg">
                            <a class="btn btn-default" title=@TitreBtn.EditIcon href="/TypeEvaluation/Edit?id=@item.TypeEvaluationId"><span class="glyphicon glyphicon-pencil"></span></a>
                            <a class="btn btn-default" title=@TitreBtn.DetailsIcon href="/TypeEvaluation/Details?id=@item.TypeEvaluationId"><span class="glyphicon glyphicon-list"></span></a>
                            <a class="btn btn-default" title=@TitreBtn.DeleteIcon href="/TypeEvaluation/Delete?id=@item.TypeEvaluationId"><span class="glyphicon glyphicon-trash"></span></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>