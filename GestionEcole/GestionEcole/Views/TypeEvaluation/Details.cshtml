@using GestionEcole.Resources.Views.TypeEvaluation;
@using GestionEcole.Resources.Views.Shared

@model GestionEcole.Models.TypeEvaluation

@{
    ViewBag.Title = @Details.ViewBagTitle;
}

<h2>
    @ViewBag.Title
    <a class="btn btn-default" title=@TitreBtn.EditIcon href="/TypeEvaluation/Edit?id=@Model.TypeEvaluationId"><span class="glyphicon glyphicon-pencil"></span></a>
</h2>

<div class="col-xs-8 col-xs-offset-2">
    <div class="list-group">
        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Type)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Type)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Ponderation)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Ponderation)</p>
        </div>
    </div>
</div>

<div class="col-xs-12">
    <a class="btn btn-lg btn-danger" title=@TitreBtn.BackIcon href="/TypeEvaluation"><span class="glyphicon glyphicon-arrow-left"></span></a>
</div>