@using GestionEcole.Resources.Views.Account;
@model GestionEcole.Models.LocalPasswordModel

<h3>@_ChangePasswordPartial.titreH3</h3>

@using (Html.BeginForm("Manage", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="col-xs-8 col-xs-offset-2">
        <fieldset>
            <legend>@_ChangePasswordPartial.legend</legend>

            <div class="form-group col-xs-8 col-xs-offset-2">
                @Html.LabelFor(m => m.OldPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>

            <div class="form-group col-xs-8 col-xs-offset-2">
                @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>

            <div class="form-group col-xs-8 col-xs-offset-2">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>            
        </fieldset>

        <div class="form-group col-xs-8 col-xs-offset-2">
            <button title = @_ChangePasswordPartial.SaveIcon class="btn btn-lg btn-primary pull-right" type="submit"><span class="glyphicon glyphicon-floppy-disk"></span></button>
        </div>
    </div>
}
