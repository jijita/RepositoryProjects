@using GestionEcole.Resources.Views.Account;
@model GestionEcole.Models.LoginModel

@{
    ViewBag.Title = Login.ViewBagTitle;
}

<section id="loginForm">

    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="col-xs-8 col-xs-offset-2">
            <fieldset>
                <legend>@ViewBag.Title</legend>

                <div class="form-group col-xs-8 col-xs-offset-2">
                    @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>

                <div class="form-group col-xs-8 col-xs-offset-2">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

                <div class="form-group col-xs-8 col-xs-offset-2">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)                           
                        </label>
                    </div>                    
                </div>                
            </fieldset>

            <div class="form-group col-xs-8 col-xs-offset-2">
                <button class="btn btn-lg btn-primary col-xs-12 col-md-2 pull-right" title=@Login.Title type="submit"><span class="glyphicon glyphicon-hand-right"></span></button>
            </div>
            <p>
                @Html.ActionLink(@GestionEcole.Resources.Views.Account.Register.Title, "Register") @Login.p
            </p>
        </div>
       <div class="col-xs-12">
            <section class="social" id="socialLoginForm">

                <h4>@Login.h2</h4>
                @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>
        
    }
 
</section>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
